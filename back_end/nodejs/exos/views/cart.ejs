<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title></title>
</head>
<body>

	<h1>Panier</h1>
	<table>
	<% 	for(var i=0; i < products.length; i++) 
		{
	%>
			<tr>
				<td><%= products[i].name %></td>
				<td><%= products[i].price %></td>
				<td>
					<form method="post" action="/products/remove">
						<input type="hidden" name="reference" value="<%= products[i].reference %>" />
						<input type="submit" value="X"/>
					</form>
				</td>
			</tr>
	<% 	} %>
	</table>
</body>
</html>